{
    "name": "marcosricardoss/rest-api-slim-example",
    "description": "Example of using the slim framework to make a REST API",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://github.com/marcosricardoss/rest-api-slim-example",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcos Ricardo",
            "email": "marcosricardoss@gmail.com",
            "homepage": "http://www.marcosricardo.com.br"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "^5.2",
        "vlucas/phpdotenv": "^2.2",
        "firebase/php-jwt": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
